@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApi.Pages.CreateChainProgect

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        @await Html.PartialAsync("Components/Header")
        <link rel="stylesheet" type="text/css" href="~/css/ChainById.css"/>
    </head>

    <body>

        <div class="index_block">
            <p>Создание Chain Progect</p>
        </div>

        <div class="d-block justify-content-center chain_add chain_block">
            <form method="post">
                
                <p class="chains_H1">Название</p>
                <div class="mt-3">
                    <input asp-for="ChainRequest.PentestObj" type="text" class="form-control" placeholder="название">
                    <input asp-for="ChainRequest.CreatorId" type="hidden" value="1">
                </div>

                <button type="submit" class="btn btn-outline-info global_button mt-4" asp-page-handler="add">Добавить новый Chain</button>
            </form>
        </div>
    </body>
</html>